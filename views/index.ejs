<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <base href="/">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css'>
    <title>Home</title>
</head>
<body>
    <div class="wrapper">
        <!-- Navbar -->
        <%- include('partials/navbar') %>
        <!-- Navbar -->
        <div class="container-fluid row">
            <!-- Chats -->
            <div class="col-3 bg-color" id="list-chat">
                <div class="p-3">
                    <h4 class="fw-bold mb-0">Chats</h4>
                </div>
                <div class="input-group search-chats">
                    <div class="input-group-append">
                        <button class="btn bg-white border border-end-0" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    <input type="search" class="form-control border-start-0 border" placeholder="Search for messages or users..." aria-label="Search for messages or users...">
                </div>
                <div class="row ms-2 mt-3">
                    <h5>Friends</h5>
                </div>
                <!-- Load friend -->
                <div class="chats" id="room-chat">
                    <% friends.forEach( f=>{%>
                    <div class="card-chat bd-radius shadow-sm mb-2 link-friend">
                       <a href="/room/find/<%=f._id%>/<%=user._id%>" class="text-decoration-none text-color">
                        <div class="card-body">
                            <div class="d-flex">
                                <div class="avatar flex-shrink-0">
                                    <img src="/images/<%=f.image%> " class="img-profile" alt="...">
                                    <div class='status-circle status-online'></div>
                                </div>
                                <div class="flex-grow-1 ms-3 overflow-hidden">
                                    <div class="d-flex align-items-center justify-content-between mb-1">
                                        <h6 class="text-truncate mb-0"><%=f.fullname%></h6>
                                        <span class=" text-muted text-nowrap ml-4">10:38 am</span>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between mb-1">
                                        <span class="text-truncate">Iâ€™m sorry, this question would be out of my expertise.</span>
                                        <span class="badge bg-primary rounded-pill">9+</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                       </a>
                    </div>
                    <%}) %> 
                </div>    
            </div>  
        </div>
        <!-- Modal -->
        <div class="modal fade" id="block_friend" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Block friend</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <h6 class="text-center">Are you sure you want to block this friend?</h6>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                  <button type="button" class="btn btn-primary">Yes</button>
                </div>
              </div>
            </div>
        </div>
        <div class="modal fade" id="delete_chats" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Delete chats</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <h6 class="text-center">Are you sure you want to delete this chat?</h6>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                  <button type="button" class="btn btn-primary">Yes</button>
                </div>
              </div>
            </div>
        </div>
        <!-- Modal -->
    </div>
    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@joeattardi/emoji-button@3.0.3/dist/index.min.js"></script>
    <script src="/javascripts/main.js"></script>
    <!-- Scripts -->
</body>
</html>