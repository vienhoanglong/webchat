                                <input class="form-control mb-2" type="text" placeholder="Occupation"  id="text-occupation">
                                <label for="text-skills" class="form-lable mb-1">Skills</label>
                                <textarea class="form-control mb-2" type="text" placeholder="Skills" rows="2" id="text-skills"></textarea>
                                <label for="text-bd" class="form-lable mb-1">Birth of date</label>
                                <input class="form-control mb-2" type="text" placeholder="Skills" id="text-bd">
                                <label for="text-country" class="form-lable mb-1">Country</label>
                                <input class="form-control mb-2" type="text" placeholder="Country" id="text-country">
                                <label for="text-address" class="form-lable mb-1">Address</label>
