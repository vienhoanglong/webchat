    <!-- Modal -->
    <div class="modal fade" id="edit-profile" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Update Information</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="" class="row">
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <button class="nav-link active" id="nav-work-tab" data-bs-toggle="tab" data-bs-target="#nav-work" type="button" role="tab" aria-controls="nav-work">Work & Education</button>
                        <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" >Contact Information</button>
                        <button class="nav-link" id="nav-personal-tab" data-bs-toggle="tab" data-bs-target="#nav-personal" type="button" role="tab" aria-controls="nav-personal" >Personal Information</button>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="nav-work" role="tabpanel">
                            <div class="tab-pane fade active show">
                                <h6 class="form-label mt-3">WORK AND EDUCATION</h6>
                                <div class="mb-5">
                                    <div class="input-group">
                                        <span class="input-group-text">Work</span>
                                        <input type="text" class="form-control" placeholder="Enter your work..." id="input-work">
                                        <button class="btn btn-success fa-solid fa-plus" type="button" id="submit-work"></button>
                                    </div>
                                    <span class="text text-danger" id="err-work"></span><br>
                                    <label class="mt-1 mb-2 fw-bold">Result submit work</label>
                                    <ul id="ul-work">
                                        <li class="badge bg-success fs-6 fw-normal mb-1">
                                            Magnificient IT (2022)
                                            <i class="fa-solid fa-xmark w-close"></i>
                                        </li>
                                    </ul>
                                </div>
                                <div class="mb-5">
                                    <div class="input-group">
                                        <span class="input-group-text">Education</span>
                                        <input type="text" class="form-control" placeholder="Enter your education..." id="input-education">
                                        <button class="btn btn-success fa-solid fa-plus" type="button" id="submit-education"></button>
                                    </div>
                                    <span class="text text-danger" id="err-education"></span><br>
                                    <label class="mt- mb-2 fw-bold">Result submit education</label>
                                    <ul id="ul-education">
                                        <li class="badge bg-success fs-6 fw-normal mb-1">
                                            Magnificient IT (2022)
                                            <i class="fa-solid fa-xmark e-close"></i>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="nav-contact" role="tabpanel">
                            <div class="tab-pane fade active show">
                                <h6 class="form-label mt-3">CONTACT INFORMATION</h6>
                                <label for="text-phone" class="form-lable mb-1">Phone</label>
                                <input class="form-control mb-2" type="text" placeholder="Phone"id="text-phone">
                                <label for="text-email" class="form-lable mb-1">Gmail</label>
                                <input class="form-control mb-2" type="text" placeholder="Gmail" id="text-email">
                                <label for="text-fb" class="form-lable mb-1">Facebook</label>
                                <input class="form-control mb-2" type="text" placeholder="Facebook" id="text-fb">
                                <label for="text-web" class="form-lable mb-1">Website</label>
